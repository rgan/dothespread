<div id="mainsection">
  <table id="mainsectiontable">
        <tr>
            <td>
              <%= render :partial => 'shared/menu',
                         :locals => {
                                 :videos_state => 'ui-state-default',
                                 :home_state => 'ui-state-default',
                                 :endorsements_state => 'ui-state-default',
                         }
              %>
            </td>
        </tr>
        <tr>
        <td>
          <h4><%=t :video_metadata_upload_form_title%></h4>
  <%= form_for(@video, :as => 'video_form') do |f| %>
      <%= error_message_list(@video) %>
      <div>
        <label for="video_title"><%= t :title_label %></label>
        <%= f.text_field :title, :size=>60 %><br>
        <label for="video_keywords"><%= t :keywords_label %></label>
        <%= f.text_field :keywords, :size => 60 %>
        <%= f.hidden_field :token %><br>
      <%= f.submit t :submit_btn %>
      </div>
  <% end %>
      </td></tr></table>
  </div>
